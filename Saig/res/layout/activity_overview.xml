<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical" 
    android:background="@drawable/bg1" >

    <TextView
        android:id="@+id/overview_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/overview_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3" />

    <Button
        android:id="@+id/overview_show_media"
        android:layout_width="140dp"
        android:layout_height="82dp"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_row="7"
        android:text="@string/show_media" 
        android:background="#D6D6D6"
        android:onClick="showMedia"  />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="138dp"
        android:layout_height="82dp"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_row="7"
        android:text="@string/settings" 
        android:background="#D6D6D6" />
    
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="212dp"
        android:layout_height="322dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_row="2"
        android:contentDescription="@string/picture_description_wildcard"
        android:src="@drawable/picture_wildcard" />

    <Button
        android:id="@+id/overview_record_voice"
        android:layout_width="84dp"
        android:layout_height="140dp"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="10dp"
        android:layout_row="2"
        android:text="@string/record_voice" 
        android:background="#D6D6D6" />
    
    <Button
        android:id="@+id/overview_take_picture"
        android:layout_width="85dp"
        android:layout_height="140dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_marginRight="10dp"
        android:layout_row="2"
        android:text="@string/take_picture"  
        android:background="#D6D6D6" />
    
</GridLayout>