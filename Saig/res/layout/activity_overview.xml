<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/overview_workshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/overview_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/overview_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="6">
        <Button
        android:id="@+id/overview_take_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_picture"
        android:layout_marginBottom="15dp" />
        <Button
        android:id="@+id/overview_record_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/record_voice" />
</LinearLayout>
    <Button
        android:id="@+id/overview_show_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="6"
        android:text="@string/show_media" />

    

    

</GridLayout>